<h3>Here Is A List Of All Employees:</h3>

<hr>

<% @employees.each do |e| %>
    <strong>Employee Name: </strong><%= e.name %> - <strong>Employee Email: </strong><%= e.email %>
    <br>
<% end %>

<%= form_tag("/search", method: "get") do %>
    <%= label_tag(:q, "Search By Name:") %>
    <%= text_field_tag(:q) %>
    <%= submit_tag("Search") %>
<% end  %>

