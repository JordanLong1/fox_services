<% if @list %>

<div class="center jumbotron" style="opacity: 0.95; float: right; width: 500px; height: 432px; overflow-x: hidden; overflow-x: auto; text-align:center;">

    <%= link_to "Add A Task To This List", new_list_task_path %> | <%= link_to "Edit This List", edit_list_path(@list) %> | <%= link_to "Delete This List", list_path(@list), method: :delete,
              data: { confirm: 'Are you sure?' } %>

    <br>

    <h3><%= @list.normalize_name %></h3><br>
        <hr>
            <% @list.tasks.each do |t| %>

                <% if t.completed == false %>
                    <li style="color:red;"><%= t.title %> - <%= link_to "View Task Details", list_task_path(@list, t) %></li><br>
                <% else t.completed == true %>
                    <li style="color:green;"><%= t.title %> - <%= link_to "View Task Details", list_task_path(@list, t) %></li><br>
                <% end %>
                
            <% end %>
</div>

<% else %>

    <div class="center jumbotron">
        <% @tasks.each do |t| %>

            <% if t.completed == false %>
                    <li style="color:red;"><%= t.list.normalize_name %> - <%= t.title %> - <%= link_to "View Task Details", list_task_path(t.list, t) %></li><br>
                <% else t.completed == true %>
                    <li style="color:green;"><%= t.list.normalize_name %> - <%= t.title %> - <%= link_to "View Task Details", list_task_path(t.list, t) %></li><br>
                <% end %>
                
            <% end %>
    </div>

<% end %>

