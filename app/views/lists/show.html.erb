<div class="center jumbotron">

    <%= link_to "View All Lists", lists_path %> | <%= link_to "Edit This List", edit_list_path(@list) %> | <%= link_to "Delete This List", list_path(@list), method: :delete,
              data: { confirm: 'Are you sure?' } %>

    <br>

    <h3><%= @list.name.titlecase %></h3><br>
        <hr>
            <% @list.tasks.each do |t| %>
                <% if t.completed == false %>
                    <li style="color:red;"><%= t.title %> - <%= t.content %> - <%= link_to "View Task Details", list_task_path(@list, t) %></li><br>
                <% else t.completed == true %>
                    <li style="color:green;"><%= t.title %> - <%= t.content %> - <%= link_to "View Task Details", list_task_path(@list, t) %></li><br>
                <% end %>
                <hr>
            <% end %>
</div>

<div class="center jumbotron">

    <%= form_for :task, url: list_tasks_path(@list) do |f| %>

        <%= f.hidden_field :list_id, value: @list.id %>

        <%= f.hidden_field :completed, value: "false" %>

        <%= f.label :title, "Enter A Title For This Task:" %><br>
        <%= f.text_field :title %>

        <br><br>

        <%= f.label :content, "Enter The Details For This Task:" %><br>
        <%= f.text_area :content, size: "50x3" %>

        <br>

        <%= f.submit %>

    <% end %>
</div>


