<div class="center jumbotron">

    <h3><%= @list.name.titlecase %></h3><br>

    <%= form_for :task, url: tasks_path do |f| %>

        <%= f.hidden_field :list_id, value: @list.id %>

        <%= f.label :title, "Enter A Title For This Task:" %><br>
        <%= f.text_field :title %>

        <br><br>

        <%= f.label :content, "Enter The Details For This Task:" %><br>
        <%= f.text_area :content, size: "50x6" %>

        <br>

        <%= f.submit %>

    <% end %>

</div>
