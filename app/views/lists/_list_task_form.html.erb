<%= form_for [@list, @list.tasks.build] do |f| %>

    <%= f.hidden_field :list_id, value: @list.id %>

    <%= f.label :title, "Enter A Title For This Task:" %><br>
    <%= f.text_field :title %>

    <br><br>

    <%= f.label :address, "Enter An Address For This Task:" %><br>
    <%= f.text_field :address %>

    <br><br>

    <%= f.label :content, "Enter The Details For This Task:" %><br>
    <%= f.text_area :content, size: "50x3" %>

    <br>

    <%= f.submit %>

<% end %>